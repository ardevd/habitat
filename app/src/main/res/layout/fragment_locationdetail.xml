<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/locationdetail_devices_header_layout"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_below="@id/devicedetail_location_layout"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/locationdetail_devices_title"
            android:text="@string/locationdetail_devices"
            style="@android:style/TextAppearance.Material.Body1"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/md_keylines"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/locationdetail_devices_list"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/locationdetail_devices_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:paddingBottom="@dimen/devices_activity_vertical_margin"
        android:paddingTop="@dimen/devices_activity_vertical_margin"/>

</RelativeLayout>