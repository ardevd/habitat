<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_automation_title"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="@dimen/devices_activity_horizontal_margin"
            android:layout_marginRight="@dimen/devices_activity_horizontal_margin"
            android:layout_marginTop="@dimen/devices_activity_vertical_margin"/>

        <TextView
            android:id="@+id/item_automation_description"
            android:layout_below="@id/item_automation_title"
            style="@android:style/TextAppearance.Material.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/devices_activity_horizontal_margin"
            android:layout_marginTop="@dimen/devices_activity_vertical_margin"
            android:layout_marginLeft="@dimen/devices_activity_horizontal_margin"/>

        <TextView
            android:id="@+id/item_automation_trigger_info"
            android:layout_below="@id/item_automation_description"
            style="@android:style/TextAppearance.Material.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGray"
            android:gravity="end"
            android:layout_marginRight="@dimen/devices_activity_horizontal_margin"
            android:layout_marginTop="@dimen/devices_activity_vertical_margin"
            android:layout_marginLeft="@dimen/devices_activity_horizontal_margin"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>