<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/devicedetail_controls_battery"
    android:layout_width="match_parent"
    style="@style/ControlsBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/devicedetail_battery_icon"
        android:layout_width="80dp"
        android:src="@drawable/ic_battery_100"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/devicedetail_control_vertical_margin"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/devicedetail_battery_value"
        style="@android:style/TextAppearance.Material.Headline"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/devicedetail_battery_icon"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="@dimen/devices_activity_horizontal_margin"/>
</RelativeLayout>